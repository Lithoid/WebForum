@model WebApp.Models.LoginViewModel

<h2>Login</h2>



<form asp-action="Login" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All" class="text-danger"></div>
    <div>
        <div>
            <label asp-for="Email">Enter email</label><br />
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div>
            <label asp-for="Password">Enter pass</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div >
            <input type="submit" value="Enter" class="btn btn-dark mt-1" />
        </div>
    </div>
</form>

<a asp-action="Register" asp-controller="User">Register</a>
