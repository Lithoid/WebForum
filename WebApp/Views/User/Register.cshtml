@model WebApp.Models.RegisterViewModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All" class="text-danger"></div>
    <div>
        <div>
            <label asp-for="Email">Enter email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div>
            <label asp-for="Name">Enter nickname</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div>
            <label asp-for="Password">Enter pass</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Repeat pass</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" />
        </div>
        <div>
            <input type="submit" class="btn btn-dark mt-1" value="Submit" />
        </div>
    </div>
</form>


