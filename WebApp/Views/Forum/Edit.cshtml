@{
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="AcceptEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" hidden class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DateCreated" hidden class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserId" hidden class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input asp-for="TopicId" hidden class="form-control" />
                <span asp-validation-for="TopicId" class="text-danger"></span>

            </div>
            <input type="submit" class="btn btn-dark" value="Submit"/>
        </form>
    </div>
</div>